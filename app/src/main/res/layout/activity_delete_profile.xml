<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".Updates.DeleteProfileActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:id="@+id/rl_email">

            <TextView
                android:id="@+id/txt_delete_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete your profile now. Please enter your credentials to authenticate."
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_delete_profile_pwd"
                android:layout_below="@+id/txt_delete_head"
                android:text="Confirmation password*"
                android:layout_marginTop="50dp"
                android:textColor="#555555"
                android:padding="6dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/edt_delete_profile_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_delete_profile_pwd"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/border"
                android:hint="Enter your password."
                android:inputType="textPassword"
                android:padding="6dp"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_authenticate_delete_profile_pwd"
                android:layout_below="@id/edt_delete_profile_pwd"
                android:text="Authenticate"
                android:layout_marginTop="18dp"
                android:layout_marginRight="70dp"
                android:layout_marginLeft="70dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:background="@color/white"
            android:layout_below="@id/rl_email">

            <TextView
                android:id="@+id/txt_delete_profile_authenticated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:padding="6dp"
                android:text="Your profile is not authenticated / verified yet!"
                android:textColor="#555555"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_delete_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_delete_profile_authenticated"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="70dp"
                android:text="Delete account" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar_delete_profile"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:elevation="10dp"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>
